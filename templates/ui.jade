doctype 5
html(lang="en")
  head
    title Prime Factor
    link(rel='stylesheet', href='/static/css/bootstrap.min.css')
  body.container
    fieldset.form-horizontal
      legend#title Prime Factor
      .form-group
        label#invitation(for="number").col-lg-2.control-label Decompose Number
        .col-lg-2
          .input-group
            input#number.form-control(type="text", autocomplete="off")
            span.input-group-btn
              button#go.btn.btn-default(type="button", onclick="new Number().decompose()") Go
      .row
        #result.col-lg-offset-2.col-lg-10 {{ result }}

    script(src='/static/lib/jquery-1.10.2.js')
    script(src='/static/js/number.js')
